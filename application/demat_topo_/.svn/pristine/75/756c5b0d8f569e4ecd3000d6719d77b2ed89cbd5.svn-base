<?xml version="1.0" encoding="UTF-8"?>
<StyledLayerDescriptor xmlns="http://www.opengis.net/sld" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.1.0" xsi:schemaLocation="http://www.opengis.net/sld http://schemas.opengis.net/sld/1.1.0/StyledLayerDescriptor.xsd" xmlns:se="http://www.opengis.net/se" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:ogc="http://www.opengis.net/ogc">
  <NamedLayer>
    <se:Name>dossier</se:Name>
    <UserStyle>
      <se:Name>dossier</se:Name>
      <se:FeatureTypeStyle>
        <se:Rule>
          <se:Name>cadastre</se:Name>
          <se:PolygonSymbolizer>
             <se:Fill>
                <!-- Remplissage dynamique -->
               <se:SvgParameter name="fill">
                 <ogc:Function name="env">
                   <ogc:Literal>remplissage</ogc:Literal>
                   <ogc:Literal>#800080</ogc:Literal> <!-- Couleur de remplissage par défaut -->
                 </ogc:Function>
               </se:SvgParameter>
                <se:SvgParameter name="fill-opacity">
                  <ogc:Function name="env">
                    <ogc:Literal>opacite</ogc:Literal>
                    <ogc:Literal>0.3</ogc:Literal> <!-- Opacité par défaut -->
                  </ogc:Function>
               </se:SvgParameter>
            </se:Fill>
            <se:Stroke>
              <!-- Bordure dynamique -->
              <se:SvgParameter name="stroke">
                <ogc:Function name="env">
                  <ogc:Literal>couleur</ogc:Literal>
                  <ogc:Literal>#800080</ogc:Literal> <!-- Couleur de bordure par défaut -->
                </ogc:Function>
              </se:SvgParameter>
              <se:SvgParameter name="stroke-width">
                <ogc:Function name="env">
                  <ogc:Literal>largeur</ogc:Literal>
                  <ogc:Literal>2</ogc:Literal> <!-- Largeur de bordure par défaut -->
                </ogc:Function>
              </se:SvgParameter>
              <se:SvgParameter name="stroke-linejoin">bevel</se:SvgParameter>
              <se:SvgParameter name="stroke-linecap">square</se:SvgParameter>
            </se:Stroke>
          </se:PolygonSymbolizer>
        </se:Rule>
        <se:Rule>
          <se:TextSymbolizer>
            <se:Label>
                <ogc:Function name="Concatenate">
                  <ogc:PropertyName>Parcelle</ogc:PropertyName>
                  <ogc:Literal> (</ogc:Literal> 
                  <ogc:PropertyName>Section</ogc:PropertyName>
                  <ogc:Literal>)</ogc:Literal> 
                </ogc:Function>
            </se:Label>
            <se:Font>
              <se:SvgParameter name="font-family">Tahoma</se:SvgParameter>
              <se:SvgParameter name="font-size">8</se:SvgParameter>
              <se:SvgParameter name="font-weight">bold</se:SvgParameter>
            </se:Font>
            <se:LabelPlacement>
              <se:PointPlacement>
                <se:AnchorPoint>
                  <se:AnchorPointX>0</se:AnchorPointX>
                  <se:AnchorPointY>0.5</se:AnchorPointY>
                </se:AnchorPoint>
              </se:PointPlacement>
            </se:LabelPlacement>
            <se:Fill>
              <se:SvgParameter name="fill">#9fff00</se:SvgParameter>
            </se:Fill>
            <se:VendorOption name="maxDisplacement">1</se:VendorOption>
          </se:TextSymbolizer>
        </se:Rule>
      </se:FeatureTypeStyle>
    </UserStyle>
  </NamedLayer>
</StyledLayerDescriptor>
